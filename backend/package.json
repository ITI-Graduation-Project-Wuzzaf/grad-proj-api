{
  "name": "backend",
  "version": "1.0.0",
  "description": "iti graduation project api",
  "main": "app.ts",
  "scripts": {
    "start": "pm2 start dist/app.js -i 2 --name=\"grad-api\" --no-daemon",
    "start:dev": "ts-node-dev -r dotenv/config src/app.ts",
    "start:debug": "node --inspect-brk src/app.ts",
    "build": "tsc",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest",
    "test:coverge": "jest --coverage",
    "lint": "eslint --ignore-path .eslintignore  --ext .js,.ts .",
    "format": "prettier--ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "cd .. & npx husky install backend/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ITI-Graduation-Project-Wuzzaf/grad-proj-api.git"
  },
  "keywords": [
    "jobs",
    "application",
    "hiring",
    "recruiters",
    "candidates"
  ],
  "author": "Bassel Salah",
  "contributors": [
    "Hussien Tarek",
    "Youssef Said",
    "Rewan Mohameed",
    "Noran Nabel"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ITI-Graduation-Project-Wuzzaf/grad-proj-api/issues"
  },
  "homepage": "https://github.com/ITI-Graduation-Project-Wuzzaf/grad-proj-api#readme",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0",
    "swagger-ui-express": "^4.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "coverageDirectory": "../coverage"
  }
}
