{
  "name": "backend",
  "version": "1.0.0",
  "description": "iti graduation project api",
  "main": "index.ts",
  "scripts": {
    "start": "pm2 start dist/index.js -i 2 --name=\"grad-api\" --no-daemon",
    "dev": "nodemon -L src/index.ts",
    "start:dev": "ts-node-dev src/index.ts",
    "start:debug": "node --inspect-brk src/index.ts",
    "app:reload": "pm2 reload all",
    "build": "tsc",
    "test": "jest --watchAll --no-cache --runInBand",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ignore-path .eslintignore  --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "cd .. & npx husky install backend/.husky",
    "migration:dev": "npx knex migrate:latest --env development",
    "seed:make": "npx knex seed:make --env development",
    "seed:run": "npx knex seed:run --env development",
    "rollback": "knex migrate:rollback --all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ITI-Graduation-Project-Wuzzaf/grad-proj-api.git"
  },
  "keywords": [
    "jobs",
    "application",
    "hiring",
    "recruiters",
    "candidates"
  ],
  "author": "Bassel Salah",
  "contributors": [
    "Hussien Tarek",
    "Youssef Said",
    "Rewan Mohameed",
    "Noran Nabel"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ITI-Graduation-Project-Wuzzaf/grad-proj-api/issues"
  },
  "homepage": "https://github.com/ITI-Graduation-Project-Wuzzaf/grad-proj-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@commitlint/types": "^17.4.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/formidable": "^2.0.6",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.4",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "chalk": "^4.1.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "formidable": "^2.1.2",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.335.0",
    "@aws-sdk/lib-storage": "^3.335.0",
    "@elastic/elasticsearch": "^8.7.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "pm2": "^5.3.0",
    "socket.io": "^4.6.1",
    "stripe": "^12.7.0",
    "swagger-ui-express": "^4.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "coverageDirectory": "../coverage"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx eslint --fix",
      "echo \" Hello there \""
    ]
  }
}
