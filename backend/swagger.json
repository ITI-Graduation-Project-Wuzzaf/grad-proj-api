{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Jobify API",
    "description": "Jobify jobs portal Rest API",
    "contact": { "email": "bassel2053@gmail.com" },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/v1",
      "description": "Development server",
      "port": { "default": "3000" },
      "basePath": {
        "default": "v1"
      }
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Authentication routes for jobify"
    },
    {
      "name": "users",
      "description": "User related endpoints"
    },
    {
      "name": "employers",
      "description": "employers/companies endpoints"
    }
  ],
  "schemes": ["http"],
  "produces": ["application/json"],
  "paths": {
    "/signup": {
      "post": {
        "tags": ["auth"],
        "summary": "Create a new user",
        "description": "creating new user account in jobify",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "operationId": "createUser",
        "requestBody": {
          "description": "Created user object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "00000000"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "00000000"
                  },
                  "first_name": {
                    "type": "string",
                    "example": "John"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "Doe"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "test@example.com"
                        },
                        "id": { "type": "number", "example": 10 }
                      }
                    },
                    "accessToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "A duplicate email detected" },
          "422": { "description": "Validation error happened" }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["auth"],
        "summary": "User signin",
        "description": "User login to get access to jobify resources like jobs, companies and profiels",
        "operationId": "login",
        "requestBody": {
          "description": "Login object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "test@example.com"
                  },
                  "password": { "type": "string", "example": "000000" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User is authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": { "$ref": "#/components/schemas/User" },
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "The email and password combination is not valid"
          },
          "422": { "description": "Validation error happened" }
        }
      }
    },
    "/profiles/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "User profile",
        "description": "Get a specific profile data",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "id of the user profile to get",
            "required": true,
            "type": "string",
            "example": 12
          }
        ],
        "responses": {
          "200": {
            "description": "User profile data is retrived",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Profile"
                }
              }
            }
          },
          "401": {
            "description": "User is not authorized"
          },
          "404": { "description": "User profile cannot be found" }
        }
      }
    },
    "/profiles": {
      "patch": {
        "tags": ["users"],
        "summary": "Update user profile",
        "description": "Updates the current logged in user profile",
        "operationId": "updateProfile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Updated profile data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Profile"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User profile is updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Profile"
                }
              }
            }
          },
          "401": {
            "description": "User is not authorized"
          },
          "422": { "description": "Validation error happened" }
        }
      }
    },
    "/employers": {
      "post": {
        "tags": ["employers"],
        "summary": "Create a new employer",
        "description": "creating new employer to post jobs",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "operationId": "createEmployer",
        "requestBody": {
          "description": "Created employer object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "company@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "00000000"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "00000000"
                  },
                  "name": {
                    "type": "string",
                    "example": "jobify"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User employer successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "company@example.com"
                        },
                        "id": { "type": "number", "example": 10 }
                      }
                    },
                    "accessToken": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "A duplicate email detected" },
          "422": { "description": "Validation error happened" }
        }
      },
      "patch": {
        "tags": ["employers"],
        "summary": "Update employer data",
        "description": "Updates the current logged in employer data",
        "operationId": "updateEmployer",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Updated employer data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Employer"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Employer data is updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employer"
                }
              }
            }
          },
          "401": {
            "description": "User is not authorized"
          },
          "422": { "description": "Validation error happened" }
        }
      }
    },
    "/employers/{id}": {
      "get": {
        "tags": ["employers"],
        "summary": "Employer data",
        "description": "Get a specific employer data",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "id of the employer to get",
            "required": true,
            "type": "string",
            "example": 12
          }
        ],
        "responses": {
          "200": {
            "description": "Employer data is retrived",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employer"
                }
              }
            }
          },
          "401": {
            "description": "User is not authorized"
          },
          "404": { "description": "Employer cannot be found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["email", "password", "first_name", "last_name"],
        "properties": {
          "id": {
            "type": "number",
            "description": "user id"
          },
          "email": {
            "type": "string",
            "description": "unique email for every user account"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          }
        }
      },
      "Profile": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "profile id"
          },
          "job": {
            "type": "string"
          },
          "country": {
            "type": "string",
            "example": "Egypt"
          },
          "city": {
            "type": "string",
            "example": "Port Said"
          },
          "university": {
            "type": "string",
            "example": "Port Said"
          },
          "gender": {
            "type": "string",
            "enum": ["M", "F"]
          },
          "experience": {
            "type": "string"
          },
          "brithdate": {
            "type": "string"
          },
          "bio": {
            "type": "string"
          },
          "skills": {
            "type": "array",
            "items": { "type": "string" }
          },
          "links": {
            "type": "array",
            "items": { "type": "string" }
          },
          "portfolio": {
            "type": "string"
          }
        }
      },
      "Employer": {
        "type": "object",
        "required": ["email", "password", "name"],
        "properties": {
          "id": {
            "type": "number",
            "description": "employer id"
          },
          "email": {
            "type": "string",
            "description": "unique email for every account"
          },
          "name": {
            "type": "string",
            "example": "jobify"
          },
          "country": {
            "type": "string",
            "example": "Egypt"
          },
          "city": {
            "type": "string",
            "example": "Port Said"
          },
          "description": {
            "type": "string"
          },
          "industry": {
            "type": "string"
          },
          "size": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
